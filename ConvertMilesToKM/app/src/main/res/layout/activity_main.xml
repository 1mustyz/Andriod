<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".MainActivity">


    <TextView
            android:text="Miles"
            android:layout_width="123dp"
            android:layout_height="49dp" android:id="@+id/txvMiles" android:layout_alignParentBottom="true"
            android:layout_marginBottom="446dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Miles"
            android:ems="10"
            android:id="@+id/editTextMiles" android:layout_alignParentBottom="true"
            android:layout_marginBottom="453dp"
            android:layout_toEndOf="@+id/txvMiles"
            android:layout_toRightOf="@+id/txvMiles" android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"/>

    <TextView
            android:text="Kilometres"
            android:layout_width="123dp"
            android:layout_height="49dp" android:id="@+id/txvKM" android:layout_alignParentBottom="true"
            android:layout_marginBottom="346dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Kilometres"
            android:ems="10"
            android:id="@+id/editTextKM" android:layout_alignParentBottom="true"
            android:layout_marginBottom="349dp"
            android:layout_toEndOf="@+id/txvMiles"
            android:layout_toRightOf="@+id/txvMiles" android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"/>

    <Button
            android:text="Convert KM To KM"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="203dp"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp"
            android:id="@+id/btnKmToMiles"
            android:layout_marginRight="48dp" android:layout_marginEnd="48dp"
            app:layout_row="0" app:layout_column="0" android:layout_alignParentBottom="true"/>
    <Button
            android:text="Convert Miles To KM"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="263dp"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp"
            android:id="@+id/btnMilesToKm"
            android:layout_marginRight="48dp" android:layout_marginEnd="48dp"
            app:layout_row="0" app:layout_column="0" android:layout_alignParentBottom="true"/>

</RelativeLayout>